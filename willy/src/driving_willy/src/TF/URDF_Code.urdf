<?xml version="1.0"?>
<robot name="test_robot">

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.675 0.48 0.30"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.07"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
  </link>
  

  
  <link name="rwheel">
    <visual>
      <geometry>
        <cylinder length="0.08" radius="0.175"/>
      </geometry>
      <origin rpy="0 1.5708 0" xyz="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="base_to_rwheel" type="continuous">
    <parent link="base_link"/>
    <child link="rwheel"/>
    <origin xyz="0.25 -0.28 0.046" rpy="0 0 1.5708"/>
  </joint>

  <link name="lwheel">
    <visual>
      <geometry>
        <cylinder length="0.08" radius="0.175"/>
      </geometry>
      <origin rpy="0 1.5708 0" xyz="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="base_to_lwheel" type="continuous">
    <parent link="base_link"/>
    <child link="lwheel"/>
    <origin xyz="0.25 0.28 0.046" rpy="0 0 1.5708"/>
  </joint>

  <link name="lbwheel">
    <visual>
      <geometry>
        <cylinder length="0.09" radius="0.125"/>
      </geometry>
      <origin rpy="0 1.5708 0" xyz="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="base_to_lbwheel" type="fixed">
    <parent link="base_link"/>
    <child link="lbwheel"/>
    <origin xyz="-0.31 -0.285 0.0" rpy="0 0 1.5708"/>
  </joint>

  <link name="rbwheel">
    <visual>
      <geometry>
        <cylinder length="0.09" radius="0.125"/>
