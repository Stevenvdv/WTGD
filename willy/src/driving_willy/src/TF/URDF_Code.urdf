  </link>

  <joint name="base_to_rbwheel" type="fixed">
    <parent link="base_link"/>
    <child link="rbwheel"/>
    <origin xyz="-0.31 0.285 0.0" rpy="0 0 1.5708"/>
  </joint>

  <joint name="base_to_kinect" type="fixed">
    <parent link="base_link"/>
    <child link="kinect"/>
    <origin xyz="0.25 0 0.25" rpy="0 0 0"/>
  </joint>

<link name="kinect">
